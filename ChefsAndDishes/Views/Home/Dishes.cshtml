@{
    ViewData["Title"] = "Dishes";
}
@model List<Dish>
<div class="row ">
    <div class="col-8 text-center display-4"><a href="/">Chefs</a> | Dishes </div>
    <div class="col-4 text-right"><a href="/dishes/new">Add a Dish</a></div>
</div>

<div class="d-flex p-2 align-items-center"> <h2>Yum, take a look at our Tasty dishes!</h2> </div>
<table class="table table-striped  table-primary">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Chef</th>
            <th scope="col">Tastiness</th>
            <th scope="col">Calories</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (Dish i in @Model)
            {
                <tr>
                    <td>@i.Name</td>
                    <td>@i.Chef.FirstName @i.Chef.LastName</td>
                    <td>@i.Tastiness</td>
                    <td>@i.Calories</td>
                </tr>
            }
        }
    </tbody>
</table>